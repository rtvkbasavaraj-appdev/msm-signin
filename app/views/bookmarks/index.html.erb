<div>
  <div>
    <h1>
      <%= User.where({:id => session.fetch(:user_id)}).first.first_name%> <%= User.where({:id => session.fetch(:user_id)}).first.last_name%>'s bookmarks
    </h1>
  </div>
</div>

<div>
  <div>
    <form action="/insert_bookmark" method="post">

      <div>
        <select id="movie_id_box" name="query_movie_id">
          <% Movie.all.each do |a_movie| %>
            <option value = <%= a_movie.id %>> <%= a_movie.title %> </option>
          <% end %>
        </select>
      

      <button>
        Bookmark this movie!
      </button>
    </form>
    </div>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <%= a_bookmark.user_id %>
        </td>

        <td>
          <%= a_bookmark.movie_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>